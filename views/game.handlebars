<a href="/"><h1 class="title">Scorekeeper</h1></a>
<input type="hidden" value="{{game._id}}" id="game-id">

{{!-- {{{game}}} --}}

<table class="table" id="game-table">
    <thead class="thead">
        <tr class="title">
            <th scope="col"></th>
            {{#each game.users}}
                <th scope="col">{{this.userName}}</th>
            {{/each}}
        </tr>
        <tr class="summary">
            <th scope="col">Sum of Score(<span class="total-score">0</span>)</th>
            <th scope="col" class="sum">0</th>
            <th scope="col" class="sum">0</th>
            <th scope="col" class="sum">0</th>
            <th scope="col" class="sum">0</th>
        </tr>
    </thead>
    <tbody>
        
        {{#each game.rounds}}
            <tr class="rounds" data-index="{{@key}}">
                <td scope="row">Round {{add @key 1}}</td>
                {{#each this}}
                    <td><input type="number" value="{{score}}" name="score" class="score"></td>
                {{/each}}
            </tr>
        {{else}}
            {{!-- when there're no round --}}
            <tr class="no-rounds">
                <td colspan="5"><h5>No scores yet. Add more round(s) to keep scores.</h5></td>
            </tr>
        {{/each}}
    </tbody>
</table>

<div class="text-center">
    <button class="btn btn-primary" id="add-round">ADD ROUND</button>
</div>